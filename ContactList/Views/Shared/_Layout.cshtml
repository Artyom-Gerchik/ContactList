@using ContactList.Entities
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ContactList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ContactList.styles.css" asp-append-version="true"/>
</head>
<body style="background-image:url('images/body-back.jpg');
               background-repeat: no-repeat;
               background-position: center;
               background-attachment: fixed;
               background-size: cover;">
<header>

    <nav class="navbar navbar-expand-lg navbar-dark navbar_top">
        <a class="navbar-brand" href="/">
            ContactList
        </a>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="text-center text-white footer_wrapper" style="background-color: #373334;">
    <div class="p-3">
        <div class="d-flex justify-content-between ">
            <div>© 2023 "ContactList"</div>
            <div>
                <a style="color: white;" href="mailto:lnxd.work@gmail.com?subject=Error%20in%site%work.&body=Yours%appeal%here:%20">
                    Found an error?
                </a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>