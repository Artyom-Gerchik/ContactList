@model EditModalModel

<div class="modal fade" id="editContact">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: rgba(133, 129, 139, 0.49); -webkit-backdrop-filter: blur(4px); backdrop-filter: blur(4px); border-radius: 25px; color: white;">
            <div class="modal-header" style="justify-content: center">
                <h5 class="modal-title" id="editContactLabel">Edit Contact</h5>
            </div>
            <div class="modal-body">
                <form action="Home/Edit">
                    <div class="form-group" style="margin-bottom: 1rem">
                        <input type="hidden" asp-for="Id">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Vasya" type="text" maxlength="10"/>
                    </div>
                    <div class="form-group" style="margin-bottom: 1rem">
                        <label asp-for="MobilePhone"></label>
                        <input asp-for="MobilePhone" class="form-control" placeholder="+375 (44) 345-67-89"/>
                    </div>
                    <div class="form-group" style="margin-bottom: 1rem">
                        <label asp-for="JobTitle"></label>
                        <input asp-for="JobTitle" class="form-control" placeholder="Builder" type="text" maxlength="15"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate"></label>
                        <input asp-for="BirthDate" class="form-control" placeholder="04/05/2003"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-warning" data-save="delete-model">Delete</button>
                <button type="button" class="btn btn-outline-success" data-save="edit-modal">Save</button>
            </div>
        </div>
    </div>
</div>